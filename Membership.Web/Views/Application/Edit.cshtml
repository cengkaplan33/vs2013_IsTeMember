}
<div class="page-content">
    <div class="page-subheading page-subheading-md">
        <ol class="breadcrumb">
            <li><a href="javascript:;">Application</a></li> 
        </ol>
    </div>

    <div class="container-fluid-md">
        <form id="ApplicationEditForm" class="form-horizontal form-bordered" role="form">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label col-sm-3">Code</label>
                        <div class="controls col-sm-6">
                            <input type="text" class="form-control" placeholder="Enter code" id="ApplicationCode" name="ApplicationCode" value="@((Model.ApplicationCode??"").Trim())" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Name</label>
                        <div class="controls col-sm-6">
                            <input type="text" class="form-control" placeholder="Enter name" id="ApplicationName" name="ApplicationName" value="@((Model.ApplicationName??"").Trim())" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Textarea</label>
                        <div class="controls col-sm-6">
                            <textarea class="form-control" rows="4" placeholder="Enter description" id="Description" name="Description" >@((Model.Description??"").Trim())</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="controls col-sm-6">
                            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

 
